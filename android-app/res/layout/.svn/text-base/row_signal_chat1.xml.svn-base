<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >


        <TextView 
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/separator"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="#00000000"
        android:visibility="gone" 
        android:gravity="center_horizontal"
        android:textColor="@color/white" />
	  	<RelativeLayout
		android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
			   
			<ImageView
		 	xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/profile_pic"
			android:layout_centerVertical="true"
		   	android:layout_alignParentLeft="true"
		 	android:layout_width="60dip"
		 	android:layout_height="60dip"/>

    	  	
		 	
    		<ImageView
	        android:id="@+id/blocked_image"
       	  	android:layout_marginRight="3dp"
       	  	android:layout_centerHorizontal="true"
			android:layout_marginTop="3dp"
			android:visibility="gone" 
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	      	android:layout_width="15dip"
	        android:layout_height="15dip"
	        android:src="@drawable/circlex" />
    		

   			
	   			    
    		<ImageView
	        android:id="@+id/full_triangle2_image"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/profile_pic"
	      	android:layout_width="4dip"
	        android:layout_height="8dip"
	        android:src="@drawable/full_triangle1" />	   			   			
   			<LinearLayout
   			android:id="@+id/bubble_layout"
	        android:orientation="vertical"
	        android:padding="10dp"
			android:layout_toRightOf="@id/full_triangle2_image"
        	android:background="@drawable/border_signal"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content">
	   			<TextView
	    		android:id="@+id/place_text"
	    		android:layout_gravity="left"
	    		android:singleLine="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"   
		        android:textSize="10sp"
		        android:textColor="#AAAAAA" />
   			    


	    		<TextView
	    		android:id="@+id/signal_text"
	    		android:layout_marginTop="5dp"
	    		android:layout_gravity="left"
				android:layout_height="wrap_content"  
	    		android:singleLine="false"
		        android:layout_width="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
    		</LinearLayout>	

	   	</RelativeLayout>	    	

</LinearLayout>