            <ImageView
            android:id="@+id/dont_be_persistent_iv"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />
            
        </RelativeLayout>   
  

        
        
            
        <TextView
        android:id="@+id/personal_advice_separator"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/personal_advice"
        android:textColor="@color/citrus_green"
        style="@android:style/TextAppearance.Large"/>  
        
        <EditText
            android:id="@+id/personal_advice_et"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_something_here"
            style="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"/>  
            
        <TextView
            android:id="@+id/personal_advice_tv"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"/>
        
    </LinearLayout>
</ScrollView>