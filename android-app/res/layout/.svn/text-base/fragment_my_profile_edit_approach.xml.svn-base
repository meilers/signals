<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scroll_view"
android:paddingTop="15dp"
android:paddingBottom="15dp"
android:paddingRight="15dp"
android:layout_width="fill_parent"
android:layout_height="fill_parent">  
    <LinearLayout
    android:id="@+id/my_profile_edit_approach_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
    
    
        <!-- TIPS --> 
        <TextView
        android:id="@+id/tips_separator"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips"
        android:textColor="@color/citrus_green"
        style="@android:style/TextAppearance.Large"/>  
        
    
        <RelativeLayout
        android:id="@+id/tip_come_say_hi_row"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="30dip">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip" 
            android:gravity="center_vertical"
            android:text="@string/come_and_say_hi"
            android:textColor="@color/white"
            style="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"/>
            
            <CheckBox
            android:id="@+id/tip_come_say_hi_cb"
            android:visibility="gone"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            
            <ImageView
            android:id="@+id/tip_come_say_hi_iv"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />
            
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/tip_buy_me_a_drink_row"
        android:paddingLeft="15dp"
        android:layout_width="fill_parent"
        android:layout_height="30dip">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip" 
            android:gravity="center_vertical"
            android:text="@string/buy_me_a_drink"
            android:textColor="@color/white"
            style="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"/>
            
            <CheckBox
            android:id="@+id/tip_buy_me_a_drink_cb"
            android:visibility="gone"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            
            <ImageView
            android:id="@+id/tip_buy_me_a_drink_iv"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />
            
        </RelativeLayout>   
        
        
        <RelativeLayout
        android:id="@+id/tip_invite_me_to_dance_row"
        android:paddingLeft="15dp"
        android:layout_width="fill_parent"
        android:layout_height="30dip">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip" 
            android:gravity="center_vertical"
            android:text="@string/invite_me_to_dance"
            android:textColor="@color/white"
            style="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"/>
            
            <CheckBox
            android:id="@+id/tip_invite_me_to_dance_cb"
            android:visibility="gone"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            
            <ImageView
            android:id="@+id/tip_invite_me_to_dance_iv"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />
            
        </RelativeLayout>   
  
        <RelativeLayout
        android:id="@+id/tip_make_me_laugh_row"
        android:paddingLeft="15dp"
        android:layout_width="fill_parent"
        android:layout_height="30dip">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip" 
            android:gravity="center_vertical"
            android:text="@string/make_me_laugh"
            android:textColor="@color/white"
            style="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"/>
            
            <CheckBox
            android:id="@+id/tip_make_me_laugh_cb"
            android:visibility="gone"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_centerVertical="true"
