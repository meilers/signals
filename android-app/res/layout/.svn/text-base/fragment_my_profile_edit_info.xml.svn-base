<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scroll_view"
android:paddingLeft="5dp"
android:paddingRight="15dp"
android:paddingBottom="15dp"
android:paddingTop="15dp"
android:layout_width="fill_parent"
android:layout_height="fill_parent">  
    <LinearLayout
    android:id="@+id/my_profile_edit_about_layout"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
    
    
        <RelativeLayout 
        android:id="@+id/about_me_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
            <ImageView
            android:id="@+id/about_me_img"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="true" />
            
            <TextView
            android:id="@+id/about_me_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/about_me_img"
            android:layout_marginLeft="10dp"
            android:text="@string/about_me"
            android:textColor="@color/citrus_green"
            style="@android:style/TextAppearance.Large"/>
              
            <TextView
            android:id="@+id/about_me_tv"
            android:layout_below="@id/about_me_separator"
            android:layout_toRightOf="@id/about_me_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"/>  
            
            
            <EditText
            android:id="@+id/about_me_et"
            android:visibility="gone"
            android:layout_below="@id/about_me_separator"
            android:layout_toRightOf="@id/about_me_img"
            android:layout_marginTop="5dp"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"/>  
            
        </RelativeLayout>

        
