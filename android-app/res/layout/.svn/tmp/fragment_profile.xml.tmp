



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scroll_view"
android:padding="15dp"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

   	<LinearLayout
   	android:id="@+id/profile_layout"
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:visibility="gone"
	android:orientation="vertical" >

  	    
  	       	    
		<FrameLayout
		android:orientation="vertical"
		android:layout_marginBottom="20dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">	  

			
	      	<com.signals_app.signals.activity.AspectRatioImageView
		    android:id="@+id/profile_pic_img" 
	   		android:layout_height="wrap_content"
	   		android:layout_width="match_parent"
	   		android:adjustViewBounds="true" 
	   		/>
	      	<ImageView 
	        android:id="@+id/blocked_image"
	      	android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
	        android:visibility="gone" 
	      	android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:src="@drawable/circlex" />   
	        
	      	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:layout_gravity="bottom"
			android:background="#88000000">

   		      	<TextView
				android:id="@+id/basic_info_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
				android:singleLine="true"  
				android:ellipsize="end"
			    android:textColor="@color/white"
		    	style="@android:style/TextAppearance.Small"/>
	      	    	
   		      	<TextView
				android:id="@+id/looking_for_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:layout_marginRight="10dp"
				android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
		    	style="@android:style/TextAppearance.Small"/>
   		      		      				
	      	    <ImageView
			    android:id="@+id/looking_for_img"
			    android:layout_marginRight="5dp"
			    android:layout_toLeftOf="@id/looking_for_text"
			    android:layout_centerVertical="true"
			   	android:layout_width="20dip"
			    android:layout_height="20dip"
			    android:src="@drawable/citrus_g" />
	      	    
	      	</RelativeLayout>
		</FrameLayout>

		<ImageView
	    android:id="@+id/triangle"
	    android:layout_marginLeft="20dp"
	   	android:layout_width="10dip"
	    android:layout_height="10dip"
	    android:src="@drawable/triangle" />

		<RelativeLayout
		android:id="@+id/tonight_layout" 
	    android:background="@drawable/my_border2"
	    android:padding="10dp"
	    android:layout_marginBottom="20dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
			<TextView
			android:id="@+id/tonight_text"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
		    android:textColor="@color/white"
	    	style="@android:style/TextAppearance.Medium"/>
        </RelativeLayout>

	     
		
		
		
		<RelativeLayout
	    android:id="@+id/photos_row"
	    android:clickable="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="?android:attr/selectableItemBackground"
		android:layout_width="fill_parent"
		android:layout_height="50dip">
			<TextView
		    android:id="@+id/photos_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/photos"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Large"/>
			<ImageView
		  	android:layout_width="15dp"
		    android:layout_height="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		    android:src="@drawable/grey_arrow" />
			
		</RelativeLayout>
		
		
			
		<RelativeLayout
	    android:id="@+id/about_row"
	    android:clickable="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="?android:attr/selectableItemBackground"
		android:layout_width="fill_parent"
		android:layout_height="50dip">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/about"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Large"/>
			<ImageView
		  	android:layout_width="15dp"
		    android:layout_height="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		    android:src="@drawable/grey_arrow" />
		</RelativeLayout>
		

		
		
		
		<RelativeLayout
	    android:id="@+id/activity_row"
	    android:clickable="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="?android:attr/selectableItemBackground"
		android:layout_width="fill_parent"
		android:layout_height="50dip">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/activity"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Large"/>
			<ImageView
		  	android:layout_width="15dp"
		    android:layout_height="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		    android:src="@drawable/grey_arrow" />
		</RelativeLayout>
		
		<RelativeLayout
	    android:id="@+id/approach_row"
	    android:clickable="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="?android:attr/selectableItemBackground"
		android:layout_width="fill_parent"
		android:layout_height="50dip">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/approach"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Large"/>
			<ImageView
			android:id="@+id/approach_arrow_img"
		  	android:layout_width="15dp"
		    android:layout_height="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		    android:src="@drawable/grey_arrow" />
			<TextView
		    android:id="@+id/dont_bother_text"
		    android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:text="@string/dont_bother"
			android:textColor="@color/soft_grey"
			style="@android:style/TextAppearance.Large"/>
		</RelativeLayout>

			
		    
	   	<TableRow
   	    android:id="@+id/signals_row"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"      
		android:layout_marginTop="30dip"
		android:layout_marginBottom="10dip" >
        
       
			<Button android:id="@+id/flirt_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      	android:layout_marginRight="10dip" 
	      	android:padding="5dp"
		 	android:text="@string/flirt"
	 		android:textSize="16sp"
	 		android:textColor="@color/citrus_red"
	       	android:focusable="true" 
	       	android:drawableTop="@drawable/signal_flirt"
	       	android:background="@drawable/btn_black"/>
	
			<Button android:id="@+id/message_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      	android:layout_marginLeft="10dip"
	      	android:layout_marginRight="20dip"
	      	android:padding="5dp"
		 	android:text="@string/message"
	 		android:textSize="16sp"
	 		android:textColor="@color/citrus_orange"
	       	android:focusable="true" 
	       	android:drawableTop="@drawable/signal_message"
	       	android:background="@drawable/btn_black"/>
			
			<Button android:id="@+id/vote_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      	android:padding="5dp"
		 	android:text="@string/vote"
	 		android:textSize="16sp"
	 		android:textColor="@color/citrus_green"
	       	android:focusable="true" 
	       	android:drawableTop="@drawable/signal_vote"
	       	android:background="@drawable/btn_black"/>
        </TableRow>
        
		<LinearLayout
	    android:id="@+id/report_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:orientation="horizontal">
			<TextView
		    android:id="@+id/report_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Small"/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginRight="5dp"
			android:text="@string/or"
			android:textColor="@color/soft_grey"
			style="@android:style/TextAppearance.Small"/>
			<TextView
		    android:id="@+id/block_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginRight="5dp"
			android:textColor="@color/white"
			style="@android:style/TextAppearance.Small"/>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginRight="5dp"
			android:text="@string/this_person"
			android:textColor="@color/soft_grey"
			style="@android:style/TextAppearance.Small"/>
	    </LinearLayout>
 	</LinearLayout>
</ScrollView>