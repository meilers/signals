
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">  

    <LinearLayout
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    
	   	<LinearLayout
	    android:id="@+id/bars_row"
		android:orientation="horizontal"
		android:background="@drawable/row_background"
        android:clickable="true"
		android:layout_width="fill_parent"
		android:layout_height="60dp">
		    <ImageView
		    android:id="@+id/bars_iv"
		    android:layout_width="25dp"
		    android:layout_height="25dp"
		    android:layout_marginRight="10dp"
		    android:src="@drawable/drinks"
		    android:layout_gravity="center_vertical"/>
		    
		    <TextView
		    android:id="@+id/bars_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:textColor="@color/white"
		    android:text="@string/bars"
		    android:singleLine="true"
		    android:ellipsize="marquee"
		    android:textAppearance="?android:attr/textAppearanceMedium"/>
		        
		    
		    <TextView
		    android:id="@+id/bars_notif_tv"
		    android:layout_width="fill_parent"
		    android:gravity="right"
		    android:layout_gravity="center_vertical|right" 
		    android:textColor="@color/white"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    />
		</LinearLayout>
	
	    <LinearLayout
	    android:id="@+id/invitations_row"
	    android:orientation="horizontal"
	    android:background="@drawable/row_background"
        android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp">
	        <ImageView
	        android:id="@+id/invitations_iv"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/clock"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_vertical"/>
	        
	        <TextView
	        android:id="@+id/invitations_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/rendezvous"
	        android:textColor="@color/white"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	            
	        
	        <TextView
	        android:id="@+id/invitations_notif_tv"
	        android:layout_width="fill_parent"
	        android:gravity="right"
	        android:layout_gravity="center_vertical|right" 
	        android:textColor="@color/white"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        />
	    </LinearLayout>
	    
	    <LinearLayout
	    android:id="@+id/profile_row"
	    android:orientation="horizontal"
	    android:background="@drawable/row_background"
        android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp">
	        <ImageView
	        android:id="@+id/profile_iv"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_vertical"/>
	        
	        <TextView
	        android:id="@+id/profile_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/white"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	            
	        
	        <TextView
	        android:id="@+id/profile_notif_tv"
	        android:layout_width="fill_parent"
	        android:gravity="right"
	        android:layout_gravity="center_vertical|right" 
	        android:textColor="@color/white"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        />
	    </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
    android:id="@+id/location_layout"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
		<TextView
		android:id="@+id/location_tv"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Hello, World"
		android:textColor="@color/white"
		style="?android:attr/listSeparatorTextViewStyle"/>

		<LinearLayout
        android:id="@+id/people_row"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/row_background"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
            <ImageView
            android:id="@+id/people_iv"
            android:src="@drawable/group"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>
            
            <TextView
            android:id="@+id/people_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="@string/people"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
                
            
            <TextView
            android:id="@+id/people_notif_tv"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_gravity="center_vertical|right" 
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </LinearLayout>
		
		<LinearLayout
        android:id="@+id/signals_row"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/row_background"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="60dp"> 
            <ImageView
            android:id="@+id/signals_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/signal_flirt"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>
            
            <TextView
            android:id="@+id/signals_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="@string/signals"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
                
            
            <TextView
            android:id="@+id/signals_notif_tv"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_gravity="center_vertical|right" 
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
            android:id="@+id/not_checked_in_layout"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
        <TextView
                android:id="@+id/location_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                style="?android:attr/listSeparatorTextViewStyle"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#AAFFFFFF"
                android:textAllCaps="true"
                android:text="@string/check_into_a_bar_to_start_the_fun"
                android:textAppearance="?android:attr/textAppearanceMedium"/>



    </LinearLayout>
</RelativeLayout>