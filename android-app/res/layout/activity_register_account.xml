<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll_view"
        android:background="@drawable/sky_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">




    <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/use_facebook_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical" >
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                <ImageView
                        android:id="@+id/triangle"
                        android:layout_marginLeft="20dp"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:src="@drawable/triangle" />


                <LinearLayout
                        android:background="@drawable/border_bubble_black"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:padding="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/use_facebook_text"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/use_facebook"
                            android:textColor="@color/white"/>

                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp" >

                        <ImageButton
                                android:id="@+id/facebook_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_facebook"/>

                        <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_marginLeft="40dp"
                                android:text="Get Info"
                                android:textColor="#ffffff"
                                android:textSize="16sp" >
                        </TextView>
                    </FrameLayout>
                </LinearLayout>
                <ImageButton
                        android:id="@+id/circlex_btn"
                        android:visibility="gone"
                        android:layout_gravity="right|top"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circlex_black"/>
            </FrameLayout>
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/sex_header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/i_am_a"
                        android:textColor="@color/white"
                        style="?android:attr/listSeparatorTextViewStyle"/>
                <LinearLayout
                        android:id="@+id/female_pref_row"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/row_background"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="40dip">
                    <ImageView
                            android:id="@+id/female_img"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/female" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/female"/>
                    <ImageView
                            android:id="@+id/check_female_img"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/checkmark" />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/male_pref_row"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/row_background"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="40dip">
                    <ImageView
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/male" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/male"/>
                    <ImageView
                            android:id="@+id/check_male_img"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/checkmark" />
                </LinearLayout>
            </LinearLayout>

            <!-- Interested In -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/orientation_header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interested_in"
                        android:textColor="@color/white"
                        style="?android:attr/listSeparatorTextViewStyle"/>
                <LinearLayout
                        android:id="@+id/interested_in_women_row"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/row_background"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="40dip">
                    <ImageView
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/female" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/women"/>
                    <ImageView
                            android:id="@+id/check_interested_in_women_img"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:src="@drawable/checkmark" />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/interested_in_men_row"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/row_background"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="40dip">
                    <ImageView
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/male" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/men"/>
                    <ImageView
                            android:id="@+id/check_interested_in_men_img"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:src="@drawable/checkmark" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>>


        <TextView
                android:id="@+id/between_ages_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/between_the_ages_of"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                style="?android:attr/listSeparatorTextViewStyle"/>

        <RelativeLayout
                android:id="@+id/between_ages_row"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:background="@drawable/row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/between_ages_text"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"/>
            <ImageView
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/compose" />
        </RelativeLayout>


        <TextView
                android:id="@+id/birthday_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_birthday"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                style="?android:attr/listSeparatorTextViewStyle"/>
        <RelativeLayout
                android:id="@+id/birthday_row"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:background="@drawable/row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/birthday_text"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"/>
            <ImageView
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/compose" />
        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/photo_layout"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/my_photo"
                    android:textColor="@color/white"
                    style="?android:attr/listSeparatorTextViewStyle"/>

            <FrameLayout
                    android:orientation="vertical"
                    android:id="@+id/profile_pic_layout"
                    android:layout_alignParentRight="true"
                    android:layout_width="80dip"
                    android:layout_height="80dip">
                <LinearLayout
                        android:background="@color/black_trans"
                        android:layout_width="80dip"
                        android:layout_height="80dip"/>
                <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Click to add photo"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                <ImageView
                        android:id="@+id/profile_pic_img"
                        android:visibility="gone"
                        android:layout_width="80dip"
                        android:layout_height="80dip" />
            </FrameLayout>


        </RelativeLayout>


        <CheckBox
                android:id="@+id/i_agree_toggle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_agree"
                android:checked="false"
                />






        <Button
                android:id="@+id/continue_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/Continue"/>




    </LinearLayout>
</ScrollView>