
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <stroke android:width="1dp" android:color="#FF444444" />
            <corners
                android:radius="5dp" 
                />
            <solid
                android:color="#FF000000" 
                />  
        </shape>
    </item>
    <item
        android:bottom="22dp" android:top="1dp" android:left="1dp" android:right="1dp"
        >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:topLeftRadius="5dp" android:topRightRadius="5dp" 
                />
            <solid
                android:color="#10FFFFFF" 
                />
        </shape>            
    </item>
    <item android:id="@+id/plus_image">
      <bitmap android:src="@drawable/plus"
        android:gravity="center" />
    </item>
</layer-list>